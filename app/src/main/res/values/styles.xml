<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 基础主题 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_00a0e9</item>
        <item name="colorPrimaryDark">@color/color_00a0e9</item>
        <item name="colorAccent">@color/color_00a0e9</item>
    </style>

    <!-- 启动页主题 -->
    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
    </style>

    <!-- Coordinator主题 -->
    <style name="AppTheme.Coordinator" parent="AppTheme">
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
    </style>

    <!-- 沉浸式页面主题 -->
    <style name="AppTheme.Immersive" parent="AppTheme">
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
    </style>

    <!-- 沉浸式Coordinator主题 -->
    <style name="AppTheme.Immersive.Coordinator" parent="AppTheme.Immersive">
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
    </style>

    <!-- 折叠后标题 -->
    <style name="TitleCollapsedStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- 展开后标题 -->
    <style name="TitleExpandedStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
