<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lodz.android.agiledev">

    <!-- 联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 拨打电话 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- 相机 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 震动 -->
    <uses-permission android:name="android.permission.VIBRATE"/>

    <!--允许读取手机信息权限-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 写存储 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 读存储 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <application
        android:name=".AgileDevApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:value="errortag" android:name="error_tag"/>

        <meta-data
            android:name="com.lodz.android.imageloader.glide.config.CacheGlideModule"
            android:value="GlideModule" />

        <activity android:name="com.lodz.android.agiledev.ui.MainActivity">

        </activity>

        <activity android:name=".ui.premissions.PremissionsActivity">

        </activity>

        <activity android:name=".ui.premissions.DeviceActivity">

        </activity>

        <activity android:name=".ui.TestActivity">

        </activity>

        <activity android:name=".ui.Test2Activity">

        </activity>

        <activity android:name=".ui.TitleBarTestActivity">

        </activity>

        <activity android:name=".ui.refresh.RefreshTestActivity">

        </activity>

        <activity android:name=".ui.drag.DragRecyclerViewActivity">

        </activity>

        <activity android:name=".ui.reflect.ReflectActivity">

        </activity>

        <activity android:name=".ui.head.HeadRecyclerViewActivity">

        </activity>

        <activity android:name=".ui.image.GlideActivity">

        </activity>

        <activity android:name=".ui.fragmentactivity.LoginActivity">

        </activity>

        <activity android:name=".ui.dialog.DialogTestActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>

</manifest>